            <form id="uploadForm" action="/upload-profile-pic" method="POST" enctype="multipart/form-data">
              <label for="profilePicInput" class="edit-icon" title="Edit Picture">âœŽ</label>
              <input type="file" id="profilePicInput" name="profilePic" accept="image/*" style="display: none;" onchange="document.getElementById('uploadForm').submit()">
            </form>
          </div>
          
          <h2 class="name"><%= user.username %></h2>
